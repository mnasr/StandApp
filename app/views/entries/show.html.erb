<div class="page-header">
	<h1><%= @title.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<p>
		<dt><b>User identification</b></dt>
		<dd><%= @entry.user.email %></dd>
	</p>

	<p>
		<dt><b>Description</b></dt>
				<dd><%= @entry.formatted_description.html_safe %></dd>
			</p>

	<p>
		<dt><b>Last Updated</b></dt>
		<dd><%= @entry.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></dd>
	</p>
</dl>

<%= back_button %>
<% if @entry.user_id == current_user.id %>
	<%= link_to('Edit entry', edit_entry_path, :class => 'btn btn-primary ') %>
<% end %> 