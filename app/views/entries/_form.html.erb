<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select(:category, Entry::CATEGORIES, {:prompt => 'Select a category'}) %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select(:user_id, all_users.map{|user| [user.email, user.id]}, {:prompt => 'Select a user'}) %>
  </div>
  <div class="field">
    <%= f.label :ticket_id %><br />
    <%= f.number_field :ticket_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
