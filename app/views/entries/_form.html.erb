<%= form_for(@entry, :html => {:class => "form-horizontal"}) do |f| %>
  <div class="control-group">
		<div class="controls">
			<%= display_error(@entry).html_safe %>
		</div>
	</div>
	
  <div class="control-group">
	  <%= f.label :description, :class => "control-label" %>
		<div class="controls" , id="entrytext">
			<%= f.text_area :description, :id => "editor" %>
		</div>
	</div>

	<div class="help">
		<a href="//docs.moodle.org/23/en/Markdown" target="_blank">Text formatting</a>
  </div>

  <div class="form-actions">
		<%= f.submit :class => "btn btn-primary" %>
		<%= back_button %>
	</div>
<% end %>
