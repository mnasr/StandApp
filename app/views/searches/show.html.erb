<h1>Results</h1>

<table class="table table-striped">
  <tr>
  	<div class="page-header">
    <th>Found <%= pluralize(@results.size, "result") %></th>
  </div>
  </tr>

<% @results.each do |result| %>
  <tr>
		<% if result.is_a?(User)%>
			<td>User: <%= result.email %></td>
		<% elsif result.is_a?(Entry) %>
			<td>Entry: <%= result.description %></td>
		<% end %>
  </tr>
<% end %>
</table>
