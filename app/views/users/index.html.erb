<% content_for :title, "Listing users" %>
<div class="page-header">
	<h1>Listing users</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Fullname</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

	<% @users.each do |user| %>
	  <tr>
	    <td><%= link_to user.fullname, user %></td>
	    <td><%= user.email %></td>
	    <td><%= link_to('Absences', user_absences_path(user)) %></td>
	    <td><%= link_to('Add an absence', new_absence_path) %></td>
	    <td><%= link_to('Edit', edit_user_path(user), :class => 'btn btn-primary') %></td>
	  </tr>
	<% end %>
</table>