<h1>Summary</h1>

<h2>Users without entries</h2>

<table class="table table-striped">

  <tr>
    <th>User</th>
    <th>Email</th>
  </tr>

<% @users_without_entries.each do |user| %>
  <tr>
			<td><%= user.fullname %></td>
      <td><%= user.email %></td>
  </tr>
<% end %>
</table>

<h2>Users with entries</h2>

<table class="table table-striped">

  <tr>
    <th>User</th>
    <th>Email</th>
  </tr>

<% @users_with_entries.each do |user| %>
  <tr>
			<td><%= user.fullname %></td>
      <td><%= user.email %></td>
  </tr>
<% end %>
</table>


<h2>Absent users</h2>

<table class="table table-striped">

  <tr>
    <th>User</th>
    <th>Description</th>
  </tr>

<% @absence.each do |absence| %>
  <tr>
    <td><%= absence.user.fullname %></td>
    <td><%= absence.description %></td>
  </tr>
<% end %>
</table>

