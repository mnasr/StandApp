<% if @absences.present? %>
	<table class="table table-striped">
	  <tr>
	    <th>User</th>
	    <th>Description</th>
	    <th></th>
	  </tr>

		<% @absences.each do |absence| %>
		  <tr>
		    <td><%= absence.user_id %></td>
		    <td><%= link_to truncate(absence.description).html_safe, absence_path(absence) %></td>
		    <td><%= link_to('Edit', edit_absence_path(absence), :class => "btn btn-primary") %></td>
		  </tr>
		<% end %>
	</table>
	
	<div class="pagination">
		<%= will_paginate @absences %>
	</div>
<% else %>
	<%= display_no_records("absences") %>
<% end %>
